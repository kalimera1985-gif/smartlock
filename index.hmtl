<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SmartLock Астана — умные замки для дверей</title>
  <meta name="description" content="Купить умные замки в Астане и Казахстане: биометрия, Wi-Fi, PIN. Доставка по РК, цены от 30 000 тг.">
  <meta name="keywords" content="умные замки Астана, смарт замок Казахстан, биометрический замок, умный замок входная дверь, smart lock Астана">
  <meta property="og:title" content="SmartLock — умные замки в Астане">
  <meta property="og:description" content="Безопасность и удобство без ключей. Доставка по Казахстану.">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://yourusername.github.io/smartlock/">
  <link rel="canonical" href="https://yourusername.github.io/smartlock/">

  <style>
    :root {
      --dark:  #003366;
      --green: #00cc66;
      --light: #f9f9f9;
    }
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      color: #444;
      background: #fff;
    }
    header {
      background: var(--dark);
      color: #fff;
      padding: 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    nav ul {
      list-style: none;
      display: flex;
      gap: 1.5rem;
      margin: 0;
      padding: 0;
    }
    nav a {
      color: #fff;
      text-decoration: none;
    }
    .hero {
      background: #000 url('hero.jpg') center/cover;
      height: 60vh;
      display: grid;
      place-items: center;
      text-align: center;
      color: #fff;
    }
    .hero h1 {
      margin: 0;
      font-size: 2.8rem;
    }
    .btn {
      background: var(--green);
      color: #fff;
      border: none;
      padding: .9rem 1.8rem;
      font-size: 1.1rem;
      cursor: pointer;
      border-radius: 4px;
    }
    section {
      padding: 3rem 1rem;
      text-align: center;
    }
    #catalog .products {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 1.5rem;
      max-width: 1200px;
      margin: 2rem auto;
    }
    .card {
      border: 1px solid #ddd;
      background: var(--light);
      padding: 1rem;
    }
    .card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
    }
    .cart-icon {
      cursor: pointer;
      position: relative;
    }
    #cart-count {
      position: absolute;
      top: -8px;
      right: -12px;
      background: red;
      color: #fff;
      border-radius: 50%;
      padding: 3px 7px;
      font-size: .8rem;
    }
    #cart-modal {
      display: none;
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,.6);
      justify-content: center;
      align-items: center;
    }
    #cart-content {
      background: #fff;
      padding: 1.5rem;
      width: 90%;
      max-width: 520px;
      border-radius: 8px;
      position: relative;
    }
    .close {
      position: absolute;
      top: 10px;
      right: 15px;
      font-size: 1.8rem;
      cursor: pointer;
    }
    #cart-items {
      list-style: none;
      padding: 0;
      margin: 1rem 0;
    }
    #cart-items li {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin: .8rem 0;
      padding: .5rem;
      border-bottom: 1px solid #eee;
    }
    .qty {
      display: flex;
      align-items: center;
      gap: .6rem;
    }
    .qty button {
      width: 28px;
      height: 28px;
      background: #eee;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-weight: bold;
    }
    footer {
      background: var(--dark);
      color: #fff;
      padding: 1.5rem;
      text-align: center;
    }
  </style>
</head>
<body>

<header>
  <h2>SmartLock</h2>
  <nav>
    <ul>
      <li><a href="#">Главная</a></li>
      <li><a href="#catalog">Каталог</a></li>
      <li><a href="#features">Преимущества</a></li>
      <li class="cart-icon">Корзина <span id="cart-count">0</span></li>
    </ul>
  </nav>
</header>

<section class="hero">
  <div>
    <h1>Умные замки для дома в Астане</h1>
    <button class="btn" onclick="document.getElementById('catalog').scrollIntoView({behavior:'smooth'})">
      Смотреть каталог
    </button>
  </div>
</section>

<section id="catalog">
  <h2>Лучшие смарт-замки в Астане и Казахстане</h2>
  <div class="products">
    <div class="card" data-id="1" data-name="Биометрия Wi-Fi" data-price="50000">
      <img src="lock1.jpg" alt="Биометрический умный замок Wi-Fi Астана">
      <h3>Биометрия Wi-Fi</h3>
      <p>50 000 тг</p>
      <button class="btn add-to-cart">В корзину</button>
    </div>
    <div class="card" data-id="2" data-name="Keypad компакт" data-price="30000">
      <img src="lock2.jpg" alt="Компактный смарт-замок с PIN для межкомнатных дверей">
      <h3>Keypad компакт</h3>
      <p>30 000 тг</p>
      <button class="btn add-to-cart">В корзину</button>
    </div>
    <!-- Добавляйте новые карточки здесь -->
  </div>
</section>

<section id="features">
  <h2>Почему выбирают нас</h2>
  <div style="display:flex;justify-content:center;gap:2rem;flex-wrap:wrap;max-width:1100px;margin:2rem auto">
    <div style="flex:1 1 220px"><h3>Удобство</h3><p>Смартфон / голос</p></div>
    <div style="flex:1 1 220px"><h3>Безопасность</h3><p>Шифрование + уведомления</p></div>
    <div style="flex:1 1 220px"><h3>Интеграция</h3><p>Alexa • Google • Алиса</p></div>
  </div>
</section>

<footer>
  <p>+7 (717) 123-45-67 | info@smartlock.kz | Астана, ул. Главная, 1</p>
  <p>Доставка по Казахстану • Возврат 30 дней</p>
</footer>

<!-- Модальное окно корзины -->
<div id="cart-modal">
  <div id="cart-content">
    <span class="close">×</span>
    <h2>Корзина</h2>
    <ul id="cart-items"></ul>
    <p id="cart-total">Итого: 0 тг</p>
    <button class="btn" id="checkout-btn">Оформить через WhatsApp</button>
  </div>
</div>

<script>
// ==================== НАСТРОЙКИ ====================
const WHATSAPP_PHONE = '+77171234567';  // ← ваш номер в формате +7XXXXXXXXXX

// ==================== СОСТОЯНИЕ ====================
let cart = JSON.parse(localStorage.getItem('cart')) || [];

// ==================== ЭЛЕМЕНТЫ DOM ====================
const elements = {
  cartCount:    document.getElementById('cart-count'),
  modal:        document.getElementById('cart-modal'),
  cartItems:    document.getElementById('cart-items'),
  cartTotal:    document.getElementById('cart-total'),
  closeBtn:     document.querySelector('.close'),
  checkoutBtn:  document.getElementById('checkout-btn'),
};

// ==================== ФУНКЦИИ ====================

function saveCart() {
  localStorage.setItem('cart', JSON.stringify(cart));
}

function updateCartDisplay() {
  saveCart();

  // Общее количество товаров (с учётом qty)
  const totalItems = cart.reduce((sum, item) => sum + (item.qty || 1), 0);
  elements.cartCount.textContent = totalItems;

  elements.cartItems.innerHTML = '';
  let totalPrice = 0;

  cart.forEach((item, index) => {
    const price = Number(item.price);
    const quantity = item.qty || 1;
    const itemTotal = price * quantity;
    totalPrice += itemTotal;

    const li = document.createElement('li');
    li.innerHTML = `
      <span>${item.name} — ${price.toLocaleString('ru-RU')} тг</span>
      
      <div class="qty">
        <button onclick="changeQuantity(${index}, -1)">−</button>
        <span>${quantity}</span>
        <button onclick="changeQuantity(${index}, 1)">+</button>
      </div>
      
      <span>${itemTotal.toLocaleString('ru-RU')} тг</span>
      <button onclick="removeItem(${index})">×</button>
    `;
    elements.cartItems.appendChild(li);
  });

  elements.cartTotal.textContent = `Итого: ${totalPrice.toLocaleString('ru-RU')} тг`;
}

window.changeQuantity = function(index, delta) {
  const item = cart[index];
  item.qty = Math.max(1, (item.qty || 1) + delta);
  updateCartDisplay();
};

window.removeItem = function(index) {
  cart.splice(index, 1);
  updateCartDisplay();
};

function addToCart(card) {
  const { id, name, price } = card.dataset;
  
  const existingItem = cart.find(item => item.id === id);
  
  if (existingItem) {
    existingItem.qty = (existingItem.qty || 1) + 1;
  } else {
    cart.push({ id, name, price, qty: 1 });
  }
  
  updateCartDisplay();
  alert('Товар добавлен в корзину!');
}

function sendToWhatsApp() {
  if (cart.length === 0) {
    alert('Корзина пуста');
    return;
  }

  let message = 'Здравствуйте! Хочу купить:\n\n';
  let grandTotal = 0;

  cart.forEach(item => {
    const qty = item.qty || 1;
    const sum = Number(item.price) * qty;
    message += `• ${item.name} × ${qty} — ${sum.toLocaleString('ru-RU')} тг\n`;
    grandTotal += sum;
  });

  message += `\nИтого: ${grandTotal.toLocaleString('ru-RU')} тг`;
  message += `\nДоставка в Астану / Казахстан. Жду консультации!`;

  const encoded = encodeURIComponent(message);
  const url = `https://wa.me/${WHATSAPP_PHONE}?text=${encoded}`;
  
  window.open(url, '_blank');

  // Раскомментировать, если нужно очищать корзину после отправки:
  // cart = [];
  // updateCartDisplay();
  // elements.modal.style.display = 'none';
}

// ==================== СОБЫТИЯ ====================

document.querySelectorAll('.add-to-cart').forEach(button => {
  button.addEventListener('click', () => {
    const card = button.closest('.card');
    addToCart(card);
  });
});

document.querySelector('.cart-icon').addEventListener('click', () => {
  elements.modal.style.display = 'flex';
  updateCartDisplay();
});

elements.closeBtn.addEventListener('click', () => {
  elements.modal.style.display = 'none';
});

elements.modal.addEventListener('click', e => {
  if (e.target === elements.modal) {
    elements.modal.style.display = 'none';
  }
});

elements.checkoutBtn.addEventListener('click', sendToWhatsApp);

// Инициализация
updateCartDisplay();
</script>

</body>
</html>
